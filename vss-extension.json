{
    "manifestVersion": 1,
    "id": "work-item-search-widget",
    "version": "1.0.0",
    "name": "Work Item Search Widget",
    "description": "Enhanced dashboard widget for searching Azure Boards work items with intelligent field detection, flexible date ranges, and smart query building capabilities",
    "publisher": "drajan",
    
    "categories": ["Azure Boards"],
    "tags": ["workitems", "search", "dashboard", "azure-boards", "query", "filter"],
    
    "public": true,
    
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "scopes": ["vso.work"],
    
    "icons": {
        "default": "img/logo.png"
    },
    
    "links": {
        "getstarted": {
            "uri": "https://github.com/draj0/azure-work-item-search"
        },
        "support": {
            "uri": "https://github.com/draj0/azure-work-item-search/issues"
        }
    },
    
    "repository": {
        "type": "git",
        "uri": "https://github.com/draj0/azure-work-item-search"
    },
    
    "branding": {
        "color": "rgb(0, 120, 212)",
        "theme": "light"
    },
    
    "content": {
        "details": {
            "path": "README.md"
        },
        "license": {
            "path": "LICENSE"
        }
    },
    
    "CustomerQnASupport": {
        "enablemarketplaceqna": true
    },
    "contributions": [
        {
            "id": "WorkItemSearchWidget",
            "type": "ms.vss-dashboards-web.widget",
            "targets": [
                "ms.vss-dashboards-web.widget-catalog"
            ],
            "properties": {
                "name": "Work Item Search",
                "description": "Search work items with intelligent field detection, flexible date filtering, partial numeric matching, and intuitive UI. Supports 100+ fields with smart query building.",
                "catalogIconUrl": "img/CatalogIcon.png",
                "previewImageUrl": "img/preview.png",
                "uri": "search-widget.html",
                "supportedSizes": [
                    {
                        "rowSpan": 2,
                        "columnSpan": 3
                    },
                    {
                        "rowSpan": 3,
                        "columnSpan": 3
                    },
                    {
                        "rowSpan": 3,
                        "columnSpan": 4
                    }
                ],
                "isNameConfigurable": false,
                "isConfigurable": false,
                "loadingImageUrl": "img/logo.png",
                "supportedScopes": ["project_team"]
            }
        }
    ],
    "files": [
        {
            "path": "search-widget.html",
            "addressable": true
        },
        {
            "path": "sdk/scripts",
            "addressable": true
        },
        {
            "path": "img",
            "addressable": true
        },
        {
            "path": "README.md",
            "addressable": true
        },
        {
            "path": "LICENSE",
            "addressable": true
        }
    ]
}